<section class="auth-section">
    <div class="auth-container">
        <h2>Change Your Password</h2>
        <form id="changePasswordForm" class="auth-form">
            <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input type="password" id="currentPassword" name="currentPassword" required>
            </div>
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" required>
                <small class="password-hint">Password must be 8-15 characters with at least one uppercase letter, one lowercase letter, one number, and one special character.</small>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Change Password</button>
            </div>
            <div id="changePasswordMessage" class="message"></div>
        </form>
        <div class="auth-links">
            <p><a href="/dashboard">Back to Dashboard</a></p>
        </div>
    </div>
</section> 